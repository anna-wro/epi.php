{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.bookmark_view'|trans({'%id%': bookmarkId}) }}
{% endblock %}

{% block body %}
    <h1>
        {{ 'title.bookmark_view'|trans({'%id%': bookmarkId}) }}
    </h1>


    {% if bookmark|length %}

        <table>
            <thead>
            <tr>
                <th>{{ 'bookmark_table.title'|trans }}</th>
                <th>{{ 'bookmark_table.url'|trans }}</th>
                <th>{{ 'bookmark_table.tag'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>
                    {{ bookmark.title }}
                </td>
                <td>
                    {{ bookmark.url }}
                </td>
                <td>
                    <ul class="tag__list">
                        {% for tag in bookmark.tags %}
                            <li class="tag__item">{{ tag }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            </tbody>
        </table>
    {% else %}
        <div>
            {{ 'bookmark_not_found'|trans }}
        </div>
    {% endif %}
{% endblock %}