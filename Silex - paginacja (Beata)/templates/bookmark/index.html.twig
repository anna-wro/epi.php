{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/style.css">
{% endblock %}

{% block title %}
    Bookmarks
{% endblock %}

{% block body %}
    <h1>
        {{ 'title.bookmarks_list'|trans }}
    </h1>

    {% if bookmarks|length %}
        <table>
            <thead>
            <tr>
                <th>{{ 'bookmark_table.title'|trans|upper }}</th>
                <th>{{ 'bookmark_table.url'|trans|upper }}</th>
                <th>{{ 'bookmark_table.tag'|trans|upper }}</th>
            </tr>
            </thead>
            <tbody>
                {% for bookmark in bookmarks %}
                    <tr>
                        <td>
                            {{  bookmark.title }}
                        </td>
                        <td>
                            {{ bookmark.url }}
                        </td>
                        <td>
                            <ul>
                                {% for tag in bookmark.tags %}
                                    <li class="tag"> {{ tag }} </li>
                                {% endfor %}
                            </ul>
                        </td>
                        <td>
                            {#<a href="{{ url('bookmark_view', {'id': bookmark.id-1}) }}" title="{{ 'label.view'|trans }}">#}
                                {#{{ 'label.view'|trans }}#}
                            {#</a>#}
                            <a href="{{ url('bookmark_view', {'id': loop.index0}) }}" title="{{ 'label.view'|trans }}">
                                {{ 'label.view'|trans }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div>
            {{ 'error_not.found'|trans }}
        </div>
    {% endif %}
    {#{{ parent() }} wyswietli to, co jest w base.html.twig w body// w#}
{% endblock %}
